{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualNetwork1": {
            "type": "string",
            "defaultValue":"vnet1",
            "metadata": {
                "description": "description"
            }
        },
        "virtualNetwork2": {
            "type": "string",
            "defaultValue":"vnet2",
            "metadata": {
                "description": "description"
            }
        },
        "vnet1Location": {
            "type": "string",
            "defaultValue":"East US",
            "metadata": {
                "description": "description"
            }
        },
        "vnet2Location": {
            "type": "string",
            "defaultName":"West US",
            "metadata": {
                "description": "description"
            }
        },
        "vnet1Subnet1Name": {
            "type": "string",
            "defaultName":"gatewaySubnet",
            "metadata": {
                "description": "description"
            }
        },
        "vnet1Subnet2Name": {
            "type": "string",
            "defaultValue":"workloadSubnet",
            "metadata": {
                "description": "description"
            }
        },
        "vnet1Subnet3Name": {
            "type": "string",
            "defaultName":"sandboxSubnet",
            "metadata": {
                "description": "description"
            }
        },
        "vnet2Subnet1Name": {
            "type": "string",
            "defaultName":"workloadSubnet",
            "metadata": {
                "description": "description"
            }
        },
        "vnet2Subnet2Name": {
            "type": "string",
            "defaultValue":"gatewaySubnet",
            "metadata": {
                "description": "description"
            }
        }
    },
    "functions": [],
    "variables": {
        "vnet1AddressPreffix": "192.168.0.0/16",
        "vnet2AddressPreffix": "10.0.0.0/16",
        "vnet1Subnet1Address": "192.168.0.0/28",
        "vnet1Subnet2Address": "192.168.0.16/28",
        "vnet1Subnet3Address": "192.168.0.32/28",
        "vnet2Subnet1Address": "10.0.0.16/28",
        "vnet2Subnet2Address": "10.0.0.0/28",
        "vnet1Subnet1Name": "gatewaySubnet",
        "vnet1Subnet2Name": "workloadSubnet",
        "vnet1Subnet3Name": "sandboxName",
        "vnet2Subnet1Name": "workloadSubnet",
        "vnet2Subnet2Name": "gatewaySubnet"
        
    },
    "resources": [
        {
            "name": "[parameters('virtualNetwork1')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2023-04-01",
            "location": "[parameters('vnet1Location')]",
            "tags": {
                "displayName": "[parameters('virtualNetwork1')]"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('vnet1AddressPreffix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('vnet1Subnet1Name')]",
                        "properties": {
                            "addressPrefix": "[variables('vnet1Subnet1Address')]"
                        }
                    },
                    {
                        "name": "[parameters('vnet1Subnet2Name')]",
                        "properties": {
                            "addressPrefix": "[variables('vnet1Subnet2Address')]"
                        }
                    },
                     {
                        "name": "[parameters('vnet1Subnet3Name')]",
                        "properties": {
                            "addressPrefix": "[variables('vnet1Subnet3Address')]"
                        }
                    }
                ]
            }
        },
        {
            "name": "[parameters('virtualNetwork2')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2023-04-01",
            "location": "[parameters('vnet2Location')]",
            "tags": {
                "displayName": "[parameters('virtualNetwork2')]"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('vnet2AddressPreffix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('vnet2Subnet1Name')]",
                        "properties": {
                            "addressPrefix": "[variables('vnet2Subnet1Address')]"
                        }
                    },
                    {
                        "name": "[parameters('vnet2Subnet2Name')]",
                        "properties": {
                            "addressPrefix": "[variables('vnet2Subnet2Address')]"
                        }
                    }
                ]
            }
        },
       {
        "name": "networkSecurityGroup1",
        "type": "Microsoft.Network/networkSecurityGroups",
        "apiVersion": "2023-04-01",
        "location": "[resourceGroup().location]",
        "properties": {
            "securityRules": [
                {
                    "name": "nsgRule1",
                    "properties": {
                        "description": "description",
                        "protocol": "Tcp",
                        "sourcePortRange": "*",
                        "destinationPortRange": "*",
                        "sourceAddressPrefix": "*",
                        "destinationAddressPrefix": "*",
                        "access": "Allow",
                        "priority": 100,
                        "direction": "Inbound"
                    }
                }
            ]
        }
       }

    ],
    "outputs": {}
}